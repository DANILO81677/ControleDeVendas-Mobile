<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.despezas.CriarDespesa">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome da Despesa"
            android:ems="10"
            android:id="@+id/editTextNomeDespesa"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.171" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.069"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Valor da Despesa"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextValorDespesa"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.171" app:layout_constraintVertical_bias="0.24"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Data de Pagamento"
            android:ems="10"
            android:id="@+id/editTextDataPagamentoDespesa"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.171" app:layout_constraintVertical_bias="0.154"/>
    <EditText
            android:layout_width="349dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="Descrição"
            android:ems="10"
            android:id="@+id/editTextDescricaoDespesa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintVertical_bias="0.346"/>
    <RadioButton
            android:text="Unica"
            android:layout_width="141dp"
            android:layout_height="49dp" android:id="@+id/radioButtonUnica"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.125" app:layout_constraintVertical_bias="0.649"/>
    <RadioButton
            android:text="Mensal"
            android:layout_width="141dp"
            android:layout_height="49dp" android:id="@+id/radioButtonMensal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.125" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.554"/>
    <Button
            android:text="Cadastrar Receita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonCrudNewWorker"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.853"/>
    <TextView
            android:text="Tipo de Despesa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.112" app:layout_constraintVertical_bias="0.476"/>
</androidx.constraintlayout.widget.ConstraintLayout>