<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.tablePrices.CriarNovoItem">

    <EditText
            android:layout_width="341dp"
            android:layout_height="53dp"
            android:inputType="textMultiLine"
            android:hint="Descrição Produto"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextDescricaoProduto"
            app:layout_constraintTop_toBottomOf="@+id/editTextTipoProduto"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.285"/>
    <EditText
            android:layout_width="345dp"
            android:layout_height="46dp"
            android:hint="Nome do Produto"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNomeProduto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.242"/>
    <EditText
            android:layout_width="wrap_content"
            android:hint="Tipo de Produto"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTipoProduto"
            app:layout_constraintTop_toBottomOf="@+id/editTextNomeProduto"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Fabricante"
            android:ems="10"
            android:id="@+id/editTextFabricanteProduto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.034"
            app:layout_constraintTop_toBottomOf="@+id/editTextValorProduto"/>
    <Button
            android:text="Cadastrar Novo Produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonCadastrarNovoProduct"
            android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.664"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Valor"
            android:ems="10"
            android:id="@+id/editTextValorProduto"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescricaoProduto"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.002"/>
</androidx.constraintlayout.widget.ConstraintLayout>