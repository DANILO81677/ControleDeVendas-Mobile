<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.despezas.AlterarDespesa">

    <EditText
            android:layout_width="319dp"
            android:layout_height="46dp"
            android:hint="Nome Despesa"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAlterarDespesaNome"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.391" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.086"/>
    <EditText
            android:layout_width="319dp"
            android:hint="Descrição"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAlterarDespesaDescricao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintVertical_bias="0.194"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextAlterarDespesaDataPagamento"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.181" app:layout_constraintVertical_bias="0.3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:hint="Valor"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextAlterarDespesaValor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintVertical_bias="0.416"/>
    <Button
            android:text="Alterar Despesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAlterarDespesa"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.736"/>
</androidx.constraintlayout.widget.ConstraintLayout>